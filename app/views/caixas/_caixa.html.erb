<div style="display: flex; align-items: center;">
  <h1>Pagamento <i class="bi bi-coin" style="margin-left: 10px;"></i></h1>
</div>
  <p>
    <strong>Id:</strong>
    <%= caixa.id %>
  </p>
  <p>
    <strong>Pgto id:</strong>
    <%= caixa.pagamento.id %>
  </p>
  <p>
    <strong>Forma de Pagamento:</strong>
    <%= caixa.pagamento.forma_pagamento.nome %>
  </p>

  <p>
    <strong>Total: </strong>
    <%= formatar_valor(caixa.pagamento.total) %>
  </p>

  <p>
    <strong>Valor:</strong>
    <%= formatar_valor(caixa.pagamento.valor) %>
  </p>

  <p>
    <strong>Troco:</strong>
    <%= formatar_valor(caixa.pagamento.troco)%>
  </p>

  <p>
  <strong>Data Pgto:</strong>
  <%= l caixa.pagamento.created_at, format: :default %>
  </p>

  <p>
    <strong>Tempo de estadia:</strong>
    <%= caixa.tempo_estadia %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= caixa.status %>
  </p>

</div>
