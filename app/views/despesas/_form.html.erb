<%= form_with(model: despesa) do |form| %>
  <% if despesa.errors.any? %>
    <div class="container small-container">
      <% despesa.errors.full_messages.each do |message| %>
        <div class="alert alert_error alert-dismissible fade show" role="alert">
          <i class="bi bi-exclamation-circle"></i> <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="card p-4 mt-5">
      <div class="row g-3">
        <div class="col-12 mb-4">
          <h3>Despesas<h3>
        </div>
        <div class="col-lg-8 col-md-12">
          <div class="field form-floating">
            <%= form.text_field :descricao, class: "form-control", placeholder: "Descricao", required: true %>
            <%= form.label "Descrição" %>
          </div>
        </div>
        <div class="col-lg-4 col-md-12">
          <div class="field form-floating">
            <%= form.select(:categoria, ['Locação','Propaganda','Associados', 'Manutenção', 'Insumos', 'Finanças'], {prompt: ""}, {class: "form-control", required: true, id: "categoria"})%>
            <%= form.label "Selecione a categoria"%>
          </div>
        </div>
        <div class="col-lg-4 col-md-12">
          <div class="field form-floating">
            <%= form.date_field :data_vencimento, class: "form-control"%>
            <%= form.label  :data_vencimento %>
          </div>
        </div>
        <div class="col-lg-4 col-md-12">
          <div class="field form-floating">
            <%= form.date_field :data_pagamento, class: "form-control",required: true %>
            <%= form.label  :data_pagamento %>
          </div>
        </div>
        <div class="col-lg-4 col-md-12">
          <div class="field form-floating">
            <%= form.number_field :valor, min: 1.00,  step: 0.01, class: "form-control", required: true%>
            <%= form.label :valor %>
          </div>
        </div>
          <div class="col-lg-4 col-md-12">
            <div class="field form-floating">
              <%= form.collection_select :forma_pagamento_id, FormaPagamento.all, :id, :nome, { include_blank: true }, class: "form-select", required: true, id: "forma_pagamento" %>
              <%= form.label :forma_pagamento_id, "Pagamento" %> 
            </div>
          </div>
        <div class="col-lg-4 col-md-12">
          <div class="field form-floating">
            <%= form.select(:status, ['Pago','Pendente'], {prompt: ""}, {:class=>"form-control", required: true})%>
            <%= form.label "Status" %>
          </div>
        </div>
      </div>
      <div class="col d-flex justify-content-start mt-4">
        <%= form.submit "Finalizar", class: "btn ", style: "margin-right: 10px;" %>
        <%= link_to despesas_path, class: "btn ", style: "margin-right: 10px;" do %>
          Cancelar
        <% end %>
      </div>
    </div>
  </div>
<% end %>