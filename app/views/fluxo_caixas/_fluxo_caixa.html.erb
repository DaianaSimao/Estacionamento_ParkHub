<div id="<%= dom_id fluxo_caixa %>">

  <p>
    <strong>ID:</strong>
    <%= fluxo_caixa.id %>
  </p>

  <p>
    <strong>Descricao:</strong>
    <%= fluxo_caixa.descricao %>
  </p>

  <p>
    <strong>Categoria:</strong>
    <%= fluxo_caixa.categoria %>
  </p>

  <p>
    <strong>Tipo:</strong>
    <%= fluxo_caixa.tipo %>
  </p>

  <p>
    <strong>Valor:</strong>
    <%= formatar_valor(fluxo_caixa.valor) %>
  </p>

  <p>
    <strong>Forma pagamento:</strong>
    <%= fluxo_caixa.forma_pagamento %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= fluxo_caixa.status %>
  </p>

  <p>
    <strong>Data vencimento:</strong>
    <%= l fluxo_caixa.data_criacao, format: :default %>
  </p>

</div>
