<%= form_with(model: preco) do |form| %>
  <div class="container">
    <div class="card p-4 mt-5">
      <div class="row g-3">
        <div class="col-12 mb-4">
          <% if preco.new_record? %>
            <h4>Cadastrar Preço</h4>
          <% else %>
            <h4>Editar Vagas</h4>
          <% end %>
          <span class="text-muted">Preencha todos os dados corretamente:</span>
        </div>
        <div class="col-lg-3 col-md-12">
          <div class="form-floating">
            <%= form.number_field :preco_hora,  min: "0", step: "0.01", class:"form-control",required: true %>
            <%= form.label "Preço por hora" %>
          </div>
        </div>
        <div class="col-lg-3 col-md-12">
          <div class="form-floating">
            <%= form.text_field :tipo, class:"form-control" %>
            <%= form.label "Tipo" %>
          </div>
        </div>
        <div class="col-12 d-flex mt-4">
          <%= form.submit "Adicionar", class: "btn btn-dark",  style: "margin-right: 10px;" %>
          <%= link_to "Cancelar", precos_path, class: "btn btn-dark" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
